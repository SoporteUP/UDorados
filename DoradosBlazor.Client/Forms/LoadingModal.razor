@if (Mostrar)
{
    <div id="modal-carga-kanban" class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.4);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow-lg rounded-xl">
                <div class="modal-header bg-blue-500 text-white">
                    <h5 class="modal-title">@Mensaje</h5>
                </div>
                <div class="modal-body p-4 text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-3">Por favor espera...</p>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Mostrar { get; set; }
    [Parameter] public string Mensaje { get; set; } = "Cargando...";
}
